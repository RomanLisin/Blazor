@page "/directions/delete"
@using Microsoft.EntityFrameworkCore
@using Academy.Models
@inject IDbContextFactory<Academy.Data.AcademyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Directions</h2>
    <hr />
    @if (directions is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">direction_name</dt>
            <dd class="col-sm-10">@directions.direction_name</dd>
        </dl>
        <EditForm method="post" Model="directions" OnValidSubmit="DeleteDirections" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(directions is null)">Delete</button> |
            <a href="/directions">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Directions? directions;

    [SupplyParameterFromQuery]
    private short direction_id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        directions = await context.Directions.FirstOrDefaultAsync(m => m.direction_id == direction_id);

        if (directions is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteDirections()
    {
        using var context = DbFactory.CreateDbContext();
        context.Directions.Remove(directions!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/directions");
    }
}
